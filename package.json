{
  "name": "yunia-ai-monorepo",
  "version": "1.0.0",
  "description": "Yunia AI - Personal Assistant Monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && php artisan serve",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:frontend",
    "start:frontend": "cd frontend && npm run start",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && composer install",
    "clean": "rm -rf node_modules frontend/node_modules backend/vendor",
    "setup": "npm run install:all && npm run setup:backend",
    "setup:backend": "cd backend && cp .env.example .env && php artisan key:generate && php artisan migrate"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azizizaidi/yunia-ai.git"
  },
  "author": "azizizaidi",
  "license": "MIT"
}
